<ProfileScreen>:
    nickname: nickname
    pfp:pfp
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'

            Label:
                id: nickname
                size_hint: 1, 0.2
                text: root.nick_text
                bold: True
                font_size: 30
                color: 0, 0, 0
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint: 1, 0.1
            AsyncImage:
                id: pfp
                size_hint: 1, 1
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint: 1, 0.22
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1.1
                    MDRoundFlatButton:
                        text: 'Изменить'
                        pos_hint: {'x': -0.2}
                        size_hint: 1.4, 0.1
                        on_press: root.switch_to_edit_screen()
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 0.05
                    MDRoundFlatButton:
                        text: 'Выйти'
                        pos_hint: {'x': -0.2}
                        size_hint: 1.4, 0.1
                        on_press: root.log_out()
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.5, 0.1

