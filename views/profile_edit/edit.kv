<EditScreen>:
    login: login
    email: email
    pwd: pwd
    save: save
    cancel: cancel
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.8
            MDTextField:
                id: login
                size_hint: 1, 0.4
                hint_text: 'Логин'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint:
                    1, 0.22
            MDTextField:
                id: email
                size_hint: 1, 0.4
                hint_text: 'Почта'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint:
                    1, 0.2
            MDTextField:
                id: pwd
                size_hint: 1, 0.4
                hint_text: 'Пароль'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
                password: True
            BoxLayout:
                size_hint:
                    1, 0.2
            MDRoundFlatButton:
                id: pfp
                size_hint: 1, 0.4
                halign: 'center'
                valign: 'center'
                text: 'Изменить аватарку'
                on_press: root.file_manager_open()
            BoxLayout:
                size_hint:
                    1, 0.22
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1.1
                    MDRoundFlatButton:
                        id: save
                        pos_hint: {'x': -0.5}
                        text: 'Сохранить'
                        size_hint: 2, 0.4
                        on_press: root.apply_changes()
                    BoxLayout:
                        size_hint: 1, 0.2
                    MDRoundFlatButton:
                        id: cancel
                        pos_hint: {'x': -0.5}
                        text: 'Отмена'
                        size_hint: 2, 0.4
                        on_press: root.switch_to_base_screen()