<AuthScreen@Screen>:
    login: login
    pswrd: pswrd
    warning: warning
    reg_but: reg_but
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.6
            MDTextField:
                id: login
                size_hint: 1, 0.3
                hint_text: 'Логин'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint:
                    1, 0.2
            MDTextField:
                id: pswrd
                size_hint: 1, 0.3
                hint_text: 'Пароль'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
                password: True
            BoxLayout:
                size_hint:
                    1, 0.22
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1.1
                    MDRoundFlatButton:
                        pos_hint: {'x': -0.5}
                        text: 'Войти'
                        size_hint: 2, 0.8
                        on_press: root.authorization()
                    BoxLayout:
                        size_hint: 1, 0.2
                    MDRoundFlatButton:
                        id: reg_but
                        pos_hint: {'x': -0.5}
                        text: 'Регистрация'
                        size_hint: 2, 0.8
                        on_press: root.switch_to_reg_screen()
                    Label:
                        id: warning
                        text: ''
                        color: 1, 0, 0
