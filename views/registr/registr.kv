<RegisterScreen@Screen>:
    mail: mail
    nickname: nickname
    pswrd: pswrd
    pswrd_repeat: pswrd_repeat
    back_to_auth_screen: back_to_auth_screen
    reg: reg
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.6
            MDTextField:
                id: nickname
                size_hint: 1, 0.6
                hint_text: 'Имя'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint:
                    1, 0.1
            MDTextField:
                id: mail
                size_hint: 1, 0.6
                hint_text: 'Почта'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
            BoxLayout:
                size_hint:
                    1, 0.1
            MDTextField:
                id: pswrd
                size_hint: 1, 0.6
                hint_text: 'Пароль'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
                password: True
            BoxLayout:
                size_hint:
                    1, 0.1
            MDTextField:
                id: pswrd_repeat
                size_hint: 1, 0.6
                hint_text: 'Повторите пароль'
                mode: 'fill'
                halign: 'center'
                valign: 'center'
                password: True
            BoxLayout:
                size_hint:
                    1, 0.22
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1.1
                    MDRoundFlatButton:
                        id: reg
                        pos_hint: {'x': -0.5}
                        text: 'Зарегестрироваться'
                        size_hint: 2, 2
                        on_press: root.register()
                    BoxLayout:
                        size_hint: 1, 0.2
                    MDRoundFlatButton:
                        id: back_to_auth_screen
                        pos_hint: {'x': -0.5}
                        text: 'Назад'
                        size_hint: 2, 2
                        on_press: root.switch_to_auth_screen()
